<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parentConstraint"
    tools:context=".signup.ChangeUserNameActivity"
    android:background="@color/white">

    <TextView
        android:id="@+id/changeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change UserName"
        android:textAllCaps="true"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="200dp"/>


    <TextView
        android:id="@+id/desTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Pick username for your account. You can
                      always change it later."
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/changeName" />


    <ImageView
        android:id="@+id/tick"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/tick"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="280dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/changeUserNameEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/changeUserNameEditText"
        app:layout_constraintTop_toBottomOf="@+id/desTextView" />

    <EditText
        android:id="@+id/changeUserNameEditText"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="90dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/round_borders_edittext"
        android:elevation="1dp"
        android:focusable="auto"
        android:hint="Change Username"
        android:inputType="text"
        android:maxLines="1"
        android:textSize="12sp"
        android:paddingLeft="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/changeName"
        />


    <Button
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/insta_buttons_styling"
        android:text="Next"
        android:textColor="@color/white"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/changeUserNameEditText" />

</androidx.constraintlayout.widget.ConstraintLayout>