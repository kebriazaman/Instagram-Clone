<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signup.signupdataset.SignupDataSetActivity"
    android:background="@color/white">

    <TextView
        android:id="@+id/nameAndPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name and Password"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:layout_marginTop="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/fullName"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:hint="Full name"
        android:inputType="text"
        android:background="@drawable/round_borders_edittext"
        android:paddingLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameAndPass"
        android:elevation="1dp"/>


    <EditText
        android:id="@+id/userPassword"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:background="@drawable/round_borders_edittext"
        android:paddingLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fullName"
        android:elevation="1dp"/>


    <Button
        android:id="@+id/continueButton"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:enabled="false"
        android:alpha="0.4"
        android:textColor="@color/white"
        android:layout_marginRight="30dp"
        android:background="@drawable/insta_buttons_styling"
        android:text="Continue"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userPassword"/>


</androidx.constraintlayout.widget.ConstraintLayout>